<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bamauiapp.tabs.Api"
             Title="Api">
    <VerticalStackLayout>
        <Label Text="API Page" FontSize="Title" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>
        <Button Text="Fetch Data" Clicked="FetchDataButton_Clicked" HorizontalOptions="Center" Margin="0,20,0,0"></Button>
            <ActivityIndicator x:Name="ActivityIndicator" IsRunning="False" IsVisible="False" Color="Blue" HorizontalOptions="Center" Margin="0,20,0,0"/>
        <Label x:Name="AlbumIdLabel" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0"/>
        <Label x:Name="TitleLabel" FontSize="Large" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>